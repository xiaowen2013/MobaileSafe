<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/SetupTitleBarStyle"
        android:gravity="center"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setup_select" >

        <TextView
            android:id="@+id/setupfind_tv"
            style="@style/setupFindTitleStyle"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="安全号码" />

        <TextView
            android:id="@+id/setfin_safeNum"
            style="@style/setupFindTitleStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="12345678923" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#44000000" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/setup_select"
        android:onClick="isUnsealSafe" >

        <TextView
            style="@style/setupFindTitleStyle"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="防盗保护是否开启"
            android:textColor="#aa000000" />

        <ImageView
            android:id="@+id/setfin_iv_safeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:src="@drawable/unlock" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#44000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="reInstall"
        android:background="@drawable/setup_select" >

        <TextView
            android:id="@+id/setupfind_tv"
            style="@style/setupFindTitleStyle"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="重新进入向导页面" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#44000000" />

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:padding="5dp"
        android:text="功能介绍" />
     
      <TextView
        style="@style/SetupItemTextStyle"
        android:text="GPS追踪: #*location*#" />

    <TextView
        style="@style/SetupItemTextStyle"
        android:text="远程删除数据: #*wipedata*#" />

    <TextView
        style="@style/SetupItemTextStyle"
        android:text="播放报警音乐: #*alarm*#" />

    <TextView
       style="@style/SetupItemTextStyle"
        android:text="远程锁屏: #*lockscreen*#" />

</LinearLayout>